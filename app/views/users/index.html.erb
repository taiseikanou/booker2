<main>
<%= render 'books/books', books: [@book,@user] %>
<div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>image</th>
      <th>name</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
    <td><td><%= image_tag @users.get_profile_image(100,100) %></td></td>
    <td><%= user.name %></td>
    <td><%=link_to 'Show',user_path(user.id)%></td>
  </tr>
  <% end %>
  </tbody>
  </table>
  </div>
  </main>
