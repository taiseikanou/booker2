     <div>
            <% book.book_comments.each do |book_comment| %>
              <p><%= image_tag book_comment.user.get_profile_image(80,80) %>
                 <%= book_comment.comment %>
                 <% if book_comment.user == current_user %>
                   <%=link_to book_book_comment_path(book_comment.book, book_comment),class:"btn btn-sm btn-danger ", method: :delete, "data-confirm"=>"Are you sure?" do%>
                  Destroy
                  <% end %>
                 <% end %>
              </p>
              <%= book_comment.user.name %>
            <% end %>
          </div>
          <div>
            <%= form_with model: [book, book_comment] do |f| %>
              <%= f.text_area :comment,:size=>"85x5", placeholder: "コメントをここに",class:"mb-2" %>
              <p><%= f.submit "送信" %></p>
            <% end %>
          </div>