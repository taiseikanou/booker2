<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
  <table class="table">
    <tbody>
      <tr>
	      <th>neme</th>
	      <th><%=user.name %></th>
      </tr>
      <tr>
	      <th>introduction</th>
	      <th><%=user.introduction  %></th>
      </tr>
      <tr>
        <th>follews</th>
        <th>
          <%= link_to user_followings_path(user),class: do%>
            <%= user.followings.count %>
          <% end %>
        </th>
      </tr>
      <tr>
        <th>followers</th>
        <th>
          <%= link_to user_followers_path(user),class:  do%>
            <%= user.followers.count %>
          <% end %>
        </th>
      </tr>
    </tbody>
  </table>
  <% if user == current_user %>
    <%= link_to edit_user_path(user.id),class: "btn btn-outline-secondary btn-block"  do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% else %>
    <% if current_user.following?(user) %>
      <%= link_to user_relationships_path(user.id), method: :delete,class:"btn-info btn-lg mt-4" do %>
      フォロー外す
      <% end %>
    <% else %>
      <%= link_to user_relationships_path(user.id), method: :post, class:"btn-success btn-lg mt-4" do %>
      フォローする
    <% end %>
  <% end %>
  <% end %>
  <%= form_with model: books do|f| %>
    <h2 class="mt-3">New book</h2>
    <div class="form-group">
      <label for="book_title">Title</label>
      <%= f.text_field :title, class:"form-control" %>
    </div>
    <div class="form-group">
      <label for="book_opinion">Opinion</label>
      <%= f.text_area :body, class:"form-control", rows:"3" %>
    </div>
    <div class="form-group">
      <%= f.submit 'Create Book', class:"btn-success btn-sm mt-4" %>
    </div>
  <% end %>
</div>