<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= form_with model: @book do|f| %>
        <% if @book.image.attached? %>
        <%= image_tag book.image, size:"100x100" %>
        <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
        <table class="table">
          <tbody>
            <tr>
	            <th>neme</th>
	            <th></th>
            </tr>
            <tr>
	            <th>introduction</th>
	            <th><%= @book.opinion %></th>
            </tr>
          </tbody>
        </table>

        <%= link_to "戻る", books_path, class: "btn btn-outline-secondary btn-block" %>
        <h2 class="mt-3">New book</h2>

        <div class="form-group">
          <label for="book_title">Title</label>
          <%= f.text_field :book_name, class:"form-control" %>
        </div>
        <div class="form-group">
           <label for="book_opinion">Opinion</label>
           <%= f.text_area :opinion, class:"form-control", rows:"3" %>
         </div>
         <div class="form-group">
           <%= f.submit 'creat book', class:"btn-success btn-info mt-4" %>
        </div>
        <% end%>
      </div>

  <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
    <td></td>
    <td><%= book.book_name %></td>
    <td><%= book.opinion %></td>
  </tr>
  <% end %>
  </tbody>
</table>
    </div>
    </div>
    </div>
  </main>